<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorMaker.MainPage">
    <ContentPage.Resources>
        <Color x:Key="Primary">#ab5237</Color>
        <Color x:Key="Secondary">#775752</Color>
        <Color x:Key="Tertiary">#705c2e</Color>
    </ContentPage.Resources>

    <Grid x:Name="Container" BackgroundColor="Black" >
        <Frame BackgroundColor="White"
               Margin="10, 0, 10, 0"
               VerticalOptions="Center">
            <VerticalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Color Maker"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
                
                <Label x:Name="lblRed"
                       Text="Red Value:"
                       FontSize="Small"
                       FontAttributes="Bold"/>
                <Slider x:Name="sldRed"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Secondary}"
                        MinimumTrackColor="{StaticResource Tertiary}" 
                        ValueChanged="sldRed_ValueChanged"
                        Minimum="0"
                        Maximum="255"/>

                <Label x:Name="lblGreen"
                       Text="Green Value:"
                       FontSize="Small"
                       FontAttributes="Bold"/>
                <Slider x:Name="sldGreen"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Secondary}"
                        MinimumTrackColor="{StaticResource Tertiary}" 
                        ValueChanged="sldGreen_ValueChanged"
                        Minimum="0"
                        Maximum="255"/>
                
                <Label x:Name="lblBlue"
                       Text="Blue Value:"
                       FontSize="Small"
                       FontAttributes="Bold"/>
                <Slider x:Name="sldBlue"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Secondary}"
                        MinimumTrackColor="{StaticResource Tertiary}" 
                        ValueChanged="sldBlue_ValueChanged"
                        Minimum="0"
                        Maximum="255"/>

                <Frame CornerRadius="25" HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <Label x:Name="lblHex"
                               Text="HEX Value: #000000"
                               HorizontalTextAlignment="End"
                               VerticalOptions="Center"/>
                        <ImageButton x:Name="imgbtnCopy"
                                     Clicked="imgbtnCopy_Clicked"
                                     Margin="10, 0, 0, 0"
                                     HeightRequest="25"
                                     WidthRequest="25"
                                     MaximumHeightRequest="20"
                                     MinimumWidthRequest="20"
                                     VerticalOptions="Center"
                                     Source="copy_icon.svg"/>
                    </HorizontalStackLayout>
                </Frame>
                <Button x:Name="btnRandom"
                        Clicked="btnRandom_Clicked"
                        BackgroundColor="{StaticResource Primary}"
                        Text="Generate random color"/>
                <HorizontalStackLayout Margin="0,10,0,10"
                                       HorizontalOptions="Center"
                                       Spacing="10">
                    <Frame CornerRadius="25" 
                           BackgroundColor="White">
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="Light Preview"
                               FontSize="Small"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalTextAlignment="Center"/>
                            <BoxView x:Name="boxLightPre"
                                     BackgroundColor="Black"
                                     HeightRequest="100"
                                     WidthRequest="100"
                                     CornerRadius="15"
                                     Margin="0,10,0,0"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame CornerRadius="25" BackgroundColor="Black">
                        <VerticalStackLayout HorizontalOptions="Center">
                            <Label Text="Dark Preview"
                               FontSize="Small"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"/>
                            <BoxView x:Name="boxDarkPre"
                                    BackgroundColor="White"
                                    HeightRequest="100"
                                    WidthRequest="100"
                                    CornerRadius="15"
                                    Margin="0,10,0,0"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </Grid>

</ContentPage>
